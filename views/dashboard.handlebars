<div class="dashbord-card">
  <form class="form post-form">
    <div class="form-group">
      <label for="blog-title">Blog Title:</label>
      <input class="form-input" type="text" id="blog-title" />
    </div>
    <div class="form-group">
      <label for="blog-post">Blog Post</label>
      <input class="form-input" type="post" id="blog-post" />
    </div>
    <div class="form-group">
      <button
        id="blogpost-button"
        class="btn btn-primary"
        type="submit"
      >create</button>
    </div>
  </form>
</div>

