{{#if user.posts.length}}

  <div class="col-md-6 post-list">
    <h3>Current blogs of:  {{user.username}}</h3>

    {{#each user.posts as |post|}}
    <div class="row mb-2 ">
      <div class="col-md-8">
        <h4><a href="/blog/{{post.id}}">{{ post.post_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" name="delete" data-id="{{post.id}}">DELETE</button>
        <button class="btn btn-sm btn-primary" name="edit"  data-id="{{post.id}}">EDIT</button>
    </div>
    
  </div>
  {{/each}}
  {{/if}}

</div>
<script src="/js/dashboard.js"></script>
